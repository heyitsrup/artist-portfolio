generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  A1
  A2
  A3
  A4
}

enum Medium {
  Acrylic_Painting
  Watercolour_Painting
  Biro_Sketch
}

enum Status {
  On_Sale
  Sold
}

enum Orientation {
  portrait
  landscape
}

model GalleryPiece {
  id            Int     @id @default(autoincrement())
  title         String
  image         String
  size          Size @default(A2)
  medium        Medium @default(Acrylic_Painting)
  price         Float
  status        Status @default(On_Sale)
  orientation   Orientation @default(portrait)
}