generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Size {
  A1
  A2
  A3
  A4
}

enum Medium {
  Acrylic_Painting
  Watercolour_Painting
  Biro_Sketch
}

model GalleryPiece {
  id            Int     @id @default(autoincrement())
  title         String
  image         String
  size          String
  medium        String
  price         Float
  orientation   String
}